<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en">
  <title type="text">Xavier Shay</title>
  <link rel="self" type="application/atom+xml" href="/feed.xml" />
  <link rel="alternate" type="text/html" href="/" />
  <updated><%= date_to_xmlschema @posts.first.date %></updated>
  <id>https://blog.xaviershay.com</id>
  <author>
    <name>Xavier Shay</name>
    <uri>https://xaviershay.com</uri>
    <email>contact@xaviershay.com</email>
  </author>

  <% @posts.each do |post| %>
    <entry>
      <title><%= post.title %></title>
      <link rel="alternate" type="text/html" href="<%= post.url %>" />
      <id><%= post.url %></id>
      <updated><%= date_to_xmlschema post.date %></updated>
      <content type="html"><%= xml_escape post.body_html %></content>
    </entry>
  <% end %>
</feed>
